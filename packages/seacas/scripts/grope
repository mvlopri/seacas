########################################################################
# initialize variables
ACCESSBIN="`dirname \"$0\"`"
ACCESSBIN="`( cd \"${ACCESSBIN}\" && pwd )`"

# Text color variables
if [[ $TERM == *"xterm"* ]] || [[ $TERM == "screen" ]]; then
    txtund=$(tput sgr 0 1)    # Underline
    txtbld=$(tput bold)       # Bold
    txtred=$(tput setaf 1)    # Red
    txtgrn=$(tput setaf 2)    # Green
    txtylw=$(tput setaf 3)    # Yellow
    txtblu=$(tput setaf 4)    # Blue
    txtpur=$(tput setaf 5)    # Purple
    txtcyn=$(tput setaf 6)    # Cyan
    txtwht=$(tput setaf 7)    # White
    txtrst=$(tput sgr0)       # Text reset
else
    export TERM=dumb
    txtund=""
    txtbld=""
    txtred=""
    txtgrn=""
    txtylw=""
    txtblu=""
    txtpur=""
    txtcyn=""
    txtwht=""
    txtrst=""
fi

echo ""
echo "${txtred}NOTICE: The 'grope' executable has been renamed to 'explore'.  Please update your scripts.${txtrst}"
echo "${txtcyn}NOTICE: The 'grope' executable has been renamed to 'explore'.  Please update your scripts.${txtrst}"
echo ""

${ACCESSBIN}/explore $*

echo ""
echo "${txtcyn}NOTICE: The 'grope' executable has been renamed to 'explore'.  Please update your scripts.${txtrst}"
echo "${txtred}NOTICE: The 'grope' executable has been renamed to 'explore'.  Please update your scripts.${txtrst}"
echo ""
